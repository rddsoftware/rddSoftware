@page
@model rddSoftwareSite.Pages.I_was_hereModel
@{
    ViewData["Title"] = "I was here!";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#iWasHereForm').submit(function (event) {
            event.preventDefault(); // Prevent the form from submitting normally

            // Collect form data
            var formData = $(this).serialize();

            // Send AJAX request
            $.ajax({
                type: 'POST',
                url: '/php/form-handler.php', // Update the URL to the correct path of your PHP file
                data: formData,
                success: function (response) {
                    alert('Email sent successfully!');
                },
                error: function () {
                    alert('Failed to send email.');
                }
            });
        });
    });
</script>


<div class="text-center">
    <h1 class="display-3">Let me know you were here!</h1>
    <p>This form collects some info and it's all 100% voluntary.</p>
    <p>Check the <a asp-area="" asp-page="/Privacy">Privacy page</a> for any concerns.</p>
</div>

<div class="text-center">
    <form id="iWasHereForm" action="javascript:void(0);" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name">

        <label for="company">Company:</label>
        <input type="text" id="company" name="company">

        <label for="email">Email:</label>
        <input type="email" id="email" name="email">

        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone">

        <input class="input-button" type="submit" value="Submit">
    </form>
</div>