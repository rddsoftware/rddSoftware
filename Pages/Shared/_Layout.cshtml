<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | RDD Software</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/rddSoftwareSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom mb-3">
            <div class="container">
                <div class="navbar-collapse d-sm-inline-flex justify-content-between">
                    <h4 class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Index">{ RDD Software }</a>
                    </h4>
                    <div class="nav-left">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Repositories">Repositories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Extra-Curriculars">Extra Curriculars</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Contact-Me">Contact Me</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                    <div class="nav-right">
                        <a href="https://www.instagram.com/mr.rustydillard/"><img class="icon-image" src="images/icons/instagramicon.png"></a>
                        <a href="https://github.com/rddsoftware"><img class="icon-image" src="images/icons/githubicon.png"></a>
                        <a href="https://www.linkedin.com/in/rusty-dillard/"><img class="icon-image" src="images/icons/linkedinicon.png"></a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2023 - RDD Software - <a asp-area="" asp-page="/Privacy">Privacy</a> - Let me know you were <a asp-area="" asp-page="/I-was-here">here</a>!
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>